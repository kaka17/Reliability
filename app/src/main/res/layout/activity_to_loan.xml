<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    tools:context="com.kaiser.reliability.activity.ToLoanActivity">
    <FrameLayout
        android:id="@+id/fl_body"
        android:layout_width="match_parent"
        android:layout_above="@+id/tabLayout"
        android:background="#ffffff"
        android:layout_height="match_parent"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/long_line"
        android:layout_above="@+id/tabLayout"
        />
    <com.flyco.tablayout.CommonTabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_alignParentBottom="true"
        android:background="#ffffff"
        tl:tl_indicator_height="0dp"
        tl:tl_iconHeight="20dp"
        tl:tl_iconWidth="20dp"
        tl:tl_indicator_color="#FFF0F0F0"
        tl:tl_textSelectColor="@color/tab_main"
        tl:tl_textUnselectColor="#808080"
        tl:tl_textsize="11sp"
        tl:tl_underline_height="0dp" />


</RelativeLayout>
